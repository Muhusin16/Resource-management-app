@model IEnumerable<ResourceManagementApp.Models.Entities.TaskAssignment>

@{
    ViewData["Title"] = "Task List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Assigned To</th>
            <th>Due Date</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.AssignedTo</td>
                <td>@task.DueDate?.ToShortDateString()</td>
                <td>@(task.Completed ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@task.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure you want to delete this task?');">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
