@model ResourceManagementApp.Models.RegisterViewModel

<h2>Register</h2>

<div class="form-container">
    <form asp-action="Register" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Choose a username" required />
            <span asp-validation-for="Username" class="text-danger" role="alert" aria-live="assertive" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" required autocomplete="off" />
            <span asp-validation-for="Password" class="text-danger" role="alert" aria-live="assertive" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" required autocomplete="off" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" role="alert" aria-live="assertive" />
        </div>

        <button type="submit" class="btn btn-success">Register</button>

        <p class="mt-3">
            Already have an account? <a asp-action="Login" asp-controller="Auth">Login here</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
