@model IEnumerable<ResourceManagementApp.Models.Entities.Review>

@{
    ViewData["Title"] = "All Reviews";
}

<h2>@ViewData["Title"]</h2>

<!-- Table displaying all reviews -->
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Reviewer</th>
                <th>Reviewee</th>
                <th>Rating</th>
                <th>Feedback</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Reviewer</td>
                    <td>@review.Reviewee</td>
                    <td>
                        <!-- Rating Star Visualization -->
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="fa fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></span>
                        }
                    </td>
                    <td>@review.Feedback</td>
                    <td>@review.ReviewDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
