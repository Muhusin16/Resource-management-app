@model IEnumerable<ResourceManagementApp.Models.Entities.Review>

@{
    ViewData["Title"] = "All Reviews";
}

<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Reviewer</th>
                <th>Reviewee</th>
                <th>Rating</th>
                <th>Feedback</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Reviewer</td>
                    <td>@review.Reviewee</td>
                    <td>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="fa fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></span>
                        }
                    </td>
                    <td>@review.Feedback</td>
                    <td>@review.ReviewDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@review.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this review?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
